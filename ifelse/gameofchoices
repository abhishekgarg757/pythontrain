value = input("You are at a crossroads. To the left is a dark forest, to the right is unknown . what do you want to select ?\n")

if value == "left":
  value1 = input("do you want to swim or wait ?\n")
  
  if value1 == "wait":
    value2 = input("which door do you want to select ? red, blue or yellow ?\n")
    if value2 == "red":
      print("Burned by fire. Game Over.")
    elif value2 == "blue":
      print("Eaten by beasts. Game Over.")
    elif value2 == "yellow":
      print("You Win!")  
    else:
      print("Game Over.")
  else:
    print("you are attacked by a trout. Game Over")

else:
  print("you fell into a hole. Game Over")
